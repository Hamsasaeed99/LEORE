@using LEORE.Data

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LEORÉ</title>
    <script type="importmap"></script>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LEORE.styles.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/styles1.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <header class="header">
        <div class="header-container">
            <div class="logo">
                <span class="note">✿</span>
                <span class="brand-name">LEORÉ</span>
                <span class="note">✿</span>
            </div>
            <div class="search-bar">
                <input type="text" placeholder="Tap to search......" class="search-input">
                <i class="fas fa-search search-icon"></i>
            </div>
            <nav class="navigation">
                <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                <div class="shop-dropdown">
                    <a asp-controller="Product" asp-action="Index" class="nav-link">Shop</a>
                  
                        <div class="dropdown-menu">
                            
                            @await Component.InvokeAsync("Categories")
                        
                        </div>
                </div>
                <a asp-controller="Home" asp-action="About" class="nav-link">About</a>
                <a asp-controller="Home" asp-action="Contact" class="nav-link">Contact</a>
            </nav>
            <div class="header-icons">
                <span class="profile-text">profile</span>
                <i class="fas fa-shopping-cart cart-icon"></i>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-container">
            <div class="footer-content">
                <div class="footer-text">
                    <h2 class="footer-title">Get in Touch</h2>
                    <p class="footer-description">Our dedicated concierge team is here to assist you with any inquiries or personalized requests.</p>
                    <div class="contact-info">
                        <p class="contact-item">
                            <strong>Visit Us:</strong> LEORÉ Boutique 450 Lexington Avenue, Suite 88 New York, NY 10017
                        </p>
                        <p class="contact-item">
                            <strong>E-mail:</strong> concierge@leore.com
                        </p>
                        <p class="contact-item">
                            <strong>Phone:</strong> +1 (800) 555-0199
                        </p>
                    </div>
                </div>
                <div class="social-media">
                    <a href="#" class="social-icon" aria-label="Facebook">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                        </svg>
                    </a>
                    <a href="#" class="social-icon" aria-label="Instagram">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="2" y="2" width="20" height="20" rx="5" ry="5" />
                            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" />
                            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5" />
                        </svg>
                    </a>
                    <a href="#" class="social-icon" aria-label="YouTube">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
                        </svg>
                    </a>
                    <a href="#" class="social-icon" aria-label="TikTok">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z" />
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
