@model LEORE.Models.Product

@{
    ViewData["Title"] = "Details";
}
<!-- Main Content -->
<main class="main-content">
    <div class="container">
        <!-- Product Section -->
        <section class="product-section1">
            <div class="product-image-placeholder">
                <img src="@Model.Image" alt="@Model.Name" class="fas fa-image" width="300" />
            </div>
            <div class="product-info">
                <h2 class="product-name">@Model.Name</h2>
                <div class="rating">
                    @for (int i = 0; i < Model.Rate; i++)
                    {
                        <i class="fas fa-star"></i>
                    }

                </div>
                <div class="product-price">@Model.Price $</div>
                <p class="product-overview">@Model.Description</p>

                <div class="product-actions">
                    <div class="quantity-selector">
                        <button class="qty-btn minus" id="decreaseQty">−</button>
                        <span class="qty-value" id="quantity">1</span>
                        <button class="qty-btn plus" id="increaseQty">+</button>
                    </div>
                    <button class="add-to-cart-btn">Add to cart</button>
                </div>
            </div>
        </section>

        <!-- Details Section -->
        <section class="details-section">
            <h3 class="section-heading">Details</h3>
            <ul class="details-list">
                <li>
                    <p><b>Color:</b> @Model.Color</p>
                </li>
                <li>
                    <p><b>Size:</b> @Model.Size</p>
                </li>
                <li>
                    <p><b>Category:</b> @Model.Category.Name</p>
                </li>
            </ul>
        </section>

        <!-- Reviews Section -->
        
        <section class="reviews-section">
            <h3 class="section-heading">Reviews</h3>
            @if (Model.ProductReviews.Any())
                {
                    foreach (var review in Model.ProductReviews)
                    {
            <div class="review-item">
                <div class="review-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <div class="review-content">
                    <div class="review-header">
                                <div class="review-stars">
                                    @for (int i = 0; i < @review.Rating; i++)
                                    {
                                        <i class="fas fa-star"></i>
                                    }

                                </div>
                        
                                <span class="review-user">@review.User.FirstName @review.User.lastName</span>
                    </div>
                            <p class="review-text">@review.Comment</p>
                </div>
            </div>
                    }
                }
                else
                {
                    <p>No reviews yet.</p>
                }   
        </section>
    </div>
</main>

